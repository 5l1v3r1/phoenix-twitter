<p>
  <%= @tweet.text %>
  <%= if current_user(@conn) do %>
    <%= if @tweet.favorite_id do %>
      <%= link("Unfavorite", to: favorite_path(@conn, :delete, @tweet.favorite_id), method: "delete") %>
    <% else %>
      <%= link("Favorite", to: favorite_path(@conn, :create, @tweet.id), method: "create") %>
    <% end %>
  <% end %>
</p>
